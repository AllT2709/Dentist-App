<%- include('template/navbar')%> <%- include('template/messages')%>

<div class="container">
  <div class="row mt-5 justify-content-center">
    <div class="col-md-6">
      <h3>Verifica tu consulta</h3>
      <form class="row g-2 card card-body" action="/patient-date" method="POST">
        <div class="col-auto">
          <input
            type="text"
            class="form-control"
            name="name"
            placeholder="your Name"
          />
        </div>
        <button type="submit" class="btn btn-primary">Consultar</button>
      </form>
    </div>
    <div class="col-md-7 mt-3">
      <% if(typeof data == 'object'){%>
      <ul>
        <li>
          Date: <%= `${data.fecha_consulta.date} ${data.fecha_consulta.hour}`%>
        </li>
        <li>Cost: <%= data.Monto%></li>
        <li>Name: <%= data.Name%></li>
        <li>
          <% if(data.Advance == null ){%>
          <p>Aun no tiene avances</p>
          <% }else{%>
          <a href="/downloads/<%=data.Name%>-date.pdf">Avances</a>
          <% }%>
        </li>
      </ul>
      <% }else{%>
      <h3><%= data %></h3>
      <% }%>
    </div>
  </div>
</div>
